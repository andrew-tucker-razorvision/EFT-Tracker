#!/bin/sh

# Automatic full validation before pushing to GitHub
# This catches ALL issues (formatting, linting, types, tests, build) before submission
# Prevents costly CI failures and reduces push/fix cycles

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "ğŸ” Running pre-push validation..."
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""

# Run the comprehensive validation script with extended timeout
# The build can take 2-3 minutes, so we give it 5 minutes max
timeout 300 npm run validate
VALIDATE_EXIT=$?

if [ $VALIDATE_EXIT -eq 124 ]; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "â±ï¸  Validation timeout (5 minutes)"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    echo "The build validation took too long. This might indicate:"
    echo "  â€¢ Slow system performance"
    echo "  â€¢ Large rebuild needed"
    echo ""
    echo "You can try:"
    echo "  1. Push with: git push --no-verify"
    echo "  2. Then run CI checks on GitHub"
    echo "  3. Or run: npm run validate manually to see what's slow"
    echo ""
    exit 1
elif [ $VALIDATE_EXIT -ne 0 ]; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "âŒ Validation failed - push blocked"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    echo "Fix the errors above and try pushing again."
    echo ""
    echo "To bypass (NOT recommended):"
    echo "  git push --no-verify"
    echo ""
    exit 1
fi

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "âœ… All validations passed"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""

# Quick Coolify deployment configuration check
echo "ğŸ³ Checking Coolify build configuration..."
if bash scripts/test-coolify-build.sh --plan > /dev/null 2>&1; then
    echo "âœ… Coolify deployment plan validated"
else
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "âš ï¸  Coolify deployment check failed"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
